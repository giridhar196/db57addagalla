extends layout

block content
  div(class="container-fluid")
  h1= title
  - let result=results
      div(class="container-fluid")
        button.btn( class="btn-primary ml-1", onclick= destination) Create
        div(class="row m-1")
        each form in result
          - let destination = `dispatch(\"/serials/update?id=${form._id}\")`
          div(class="row-sm-2 m-1")  #{form.name} - #{form.author} - #{form.season}
            button.btn( class="btn-danger ml-1", onclick= destination) delete
            button.btn( class="btn-primary ml-1", onclick= destination) Details
            button.btn( class="btn-success ml-1", onclick= destination) Create
    
  script.
       function dispatch(path) {
         window.location.href = path
       }
      function buy(itemNo)
      {
        alert(`You purchased Item ${itemNo+1}`)
      } 